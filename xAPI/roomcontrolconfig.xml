<Extensions>
  <Version>1.5</Version>
  <Panel>
    <PanelId>room_controls</PanelId>
    <Type>Statusbar</Type>
    <Icon>Lightbulb</Icon>
    <Order>1</Order>
    <Name>Room Controls</Name>
    <Page>
      <Name>Room Controls</Name>
      <Row>
        <Name>Lights On/Off</Name>
        <Widget>
          <WidgetId>lights_off</WidgetId>
          <Name>Off</Name>
          <Type>Text</Type>
          <Options>size=1;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>lights_toggle</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
        <Widget>
          <WidgetId>lights_on</WidgetId>
          <Name>On</Name>
          <Type>Text</Type>
          <Options>size=1;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Light Dimmer</Name>
        <Widget>
          <WidgetId>lights_low</WidgetId>
          <Name>0%</Name>
          <Type>Text</Type>
          <Options>size=1;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>light_dimmer</WidgetId>
          <Type>Slider</Type>
          <Options>size=2</Options>
        </Widget>
        <Widget>
          <WidgetId>lights_high</WidgetId>
          <Name>100%</Name>
          <Type>Text</Type>
          <Options>size=1;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Curtains</Name>
        <Widget>
          <WidgetId>curtain_group</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4</Options>
          <ValueSpace>
            <Value>
              <Key>1</Key>
              <Name>Opened</Name>
            </Value>
            <Value>
              <Key>2</Key>
              <Name>Halfway</Name>
            </Value>
            <Value>
              <Key>3</Key>
              <Name>Closed</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Row>
        <Name>Video Screen Up/Down</Name>
        <Widget>
          <WidgetId>screen_position</WidgetId>
          <Type>Spinner</Type>
          <Options>size=2</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_2</WidgetId>
          <Type>Spacer</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Camera</Name>
        <Widget>
          <WidgetId>camera_position</WidgetId>
          <Name>Position</Name>
          <Type>DirectionalPad</Type>
          <Options>size=4</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
  </Panel>
</Extensions>
